generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Example model for a home drinks application
model Drink {
  id          String   @id @default(cuid())
  name        String
  description String?
  category    String
  ingredients String[]
  instructions String
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("drinks")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

// Uploadcare file metadata table
model UploadcareFile {
  id              String   @id @default(cuid())
  fileId          String   @unique @map("file_id")
  fileUrl         String   @map("file_url")
  userId          String   @map("user_id")
  fileName        String?  @map("file_name")
  fileSize        Int?     @map("file_size")
  contentType     String?  @map("content_type")
  uploadTimestamp DateTime @default(now()) @map("upload_timestamp")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("uploadcare_files")
}
